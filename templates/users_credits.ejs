<html>

<head>
  <title>Credits</title>
  <style>
    body {
      font-family: sans-serif;
    }
     .container {
      width: 90%;
      margin: 0 auto;
      display: flex;
      justify-content: space-around;
      padding-left: 20%;
      box-sizing: border-box;
    }
    ol { 
      display: inline-block;
      padding: 0;
      width: 40%;
      font-size: 1.5rem;
      box-sizing: border-box;
    }
    ol:nth-child(2) {
      margin-left: 15%;
    }

    li {
      /* font-size: 12px;
      width: 50%;
      margin: 0 auto; */
      margin-bottom: 2rem;
    }

    li .content {
      margin-bottom: 10px;
    }

    li a {
      color: black;
    }

    li a.ref_link {
      color: #624FF7;
    }
  </style>
</head>

<body>
  <h1 style="text-align:center; margin-top:20px;"><%= textCredits %></h1>
  <p style="text-align:center">
    <a href="#"><%= usersRef %></a>
  </p>
  <div class="container">

    <ol start="<%= start %>">

      <% for (let i = 0; i < usersChunk[0].length; i++) { %>
      <li>
        <div class="content">
          <%= usersChunk[0][i] %>
        </div>
      </li>

      <% } %>

    </ol>
    <% if (usersChunk.length === 2) { %>
    <ol start="<%= start + usersChunk[0].length %>">
      <% for (let i = 0; i < usersChunk[1].length; i++) { %>
        <li>
          <div class="content">
            <%= usersChunk[1][i] %>
          </div>
        </li>
      <% } %>
    </ol>
    <% } %>
  </div>

</body>

</html>